<h1>New Game</h1>
<% @sample_array.each do |letter| %>
<span class="letter"><%= letter %></span>
<% end %>
<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" name="word" placeholder="Enter your long word!" autofocus="focus">
  <input type="hidden" name="sample_array" value="<%= @sample_array.join %>">
  <input type="submit" value="Play" class="btn">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
